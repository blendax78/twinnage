{# src/App/UserBundle/Resources/views/Default/login.html.twig #}
{% extends '::base.html.twig' %}

{% block title %}Login{% endblock %}
{% block bodycss %}center{% endblock %}
{% block body %}
<div class="row"><div class="span12"><h1>twinnage</h1></div></div>
<div class="row">&nbsp;</div>
<div class="row center">
	<div class="loginBox ">
		<form id="loginfrm" action="{{ path('login_check') }}" method="post" class="form-horizontal">
			<legend>Login</legend>
			  <div class="control-group">
			    <label class="control-label" for="username">Username:</label>
			    <div class="controls">
			      <input type="text" id="email" name="_username" value="{{ last_email }}" placeholder="Username"/>
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="username">Password:</label>
			    <div class="controls">
			      <input type="password" id="password" name="_password" placeholder="Password"/>
			    </div>
			  </div>
	
		    {#
		        If you want to control the URL the user is redirected to on success (more details below)
		        <input type="hidden" name="_target_path" value="/account" />
		    #}

		    <button type="submit" class="btn">Sign in</button>
		    {% if error %}
    			<div class="error">{{ error.message }}</div>
			{% endif %}
		</form>
	</div>
</div>
{% endblock %}